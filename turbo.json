{
	"$schema": "https://turborepo.dev/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*", "!README.md"],
			"outputs": [".output/**", ".dist/**"]
		},
		"dev": {
			"cache": false,
			"dependsOn": ["pkg:install", "gen:types"],
			"persistent": true
		},
		"format": {
			"dependsOn": ["^format"]
		},
		"gen:types": {
			"dependsOn": ["pkg:install", "^gen:types"]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"pkg:install": {
			"dependsOn": ["^pkg:install"]
		},
		"test": {
			"dependsOn": ["^test"]
		}
	},
	"ui": "tui"
}
