{
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"turbo": "^2.7.4",
		"typescript": "5.9.2"
	},
	"engines": {
		"node": ">=18"
	},
	"lint-staged": {
		"*.{ts,tsx,css,json}": "biome check --write",
		"*.py": [
			"uv run ruff check --fix",
			"uv run ruff format --check"
		]
	},
	"name": "final-year-campus-ai",
	"packageManager": "bun@1.3.6",
	"private": true,
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev",
		"format": "turbo run format",
		"lint": "turbo run lint",
		"pkg:install": "turbo run pkg:install",
		"prepare": "husky",
		"start": "turbo run start",
		"test": "turbo run test"
	},
	"workspaces": [
		"apps/*",
		"packages/*"
	]
}
